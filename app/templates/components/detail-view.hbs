<section class="detail-view {{mode}}" id="detail-view" aria-labeledby="dialog-header">
<header id="dialog-header">
  Project Details <span class="hidden-text">Use down arrow to explore overlay content.</span>
  <button role="button" {{action "buttonClicked" param=itemId}}>close
    <span class="hidden-text">detail dialog</span>
  </button>
</header>
  <div>
    {{yield}}
    <article>
    	{{model.description}}
   	</article>
   	{{#if model.images}}
   	  <article>
   	    <h3>Images</h3>
   	    <ul>
   	    {{#each model.images as |image|}}
   	      <li><img src="{{image.url}}" class="responsive-img" alt="{{image.description}}"/></li>
   	    {{/each}}
   	    </ul>
   	  </article>
   	{{/if}}
   	{{#if model.links}}
   	  <article>
   	    <h3>Links</h3>
   	    <ul>
   	    {{#each model.links as |link|}}
   	      <li><a href="{{link.url}}" target="_blank">{{link.description}}</a></li>
   	    {{/each}}
   	    </ul>
   	  </article>
   	{{/if}}
    <button class="dialog-button" role="button" {{action "buttonClicked" param=itemId}}>go back to project list</button>
  </div>
</section>
